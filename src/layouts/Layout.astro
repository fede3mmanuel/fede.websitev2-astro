---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
import 'bulma/css/bulma.css'
// The url is automatic generated for og url
const pageurl = new URL(Astro.url.pathname, Astro.url);
const profilephoto = new URL('/fedeog.avif', Astro.url);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta property="og:image" content={profilephoto.href}>
		<meta property="og:url" content={pageurl.href}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<!-- It is short for social media -->
		<meta property="og:description" content="Sitio Web de Fede">

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Sitio Web personal de Fede">
		<title>{title}</title>

	</head>
	<body>
		<div class="section">
			<div class="container">
				<div class="columns is-mobile is-centered">
					<div class="column is-half has-text-centered">
						<slot />
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
