---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
import 'bulma/css/bulma.css'
// The url is automatic generated for og url
const pageurl = new URL(Astro.url.pathname, Astro.url);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Sitio Web personal de Fede">
		<title>{title}</title>

		<meta name="og:image" content='../images/fede.avif'>
		<meta name="og:url" content={pageurl.href}>
	</head>
	<body>
		<div class="section">
			<div class="container">
				<div class="columns is-mobile is-centered">
					<div class="column is-half has-text-centered">
						<slot />
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
